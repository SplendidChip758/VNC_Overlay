<Window x:Class="VNCOverlayUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNCOverlayUI"
        mc:Ignorable="d"
        Title="OverLay" Height="450" Width="800"
        WindowStyle="None" WindowState="Maximized" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False"
        Topmost="True" ResizeMode="NoResize">
    <Window.Background>
        <SolidColorBrush Color="black" Opacity="0.4"/>
    </Window.Background>
    <Grid>
        <!-- Your UI elements go here -->
        <TextBlock Text="Remote Connection Active" Foreground="White" Opacity="0.8" FontSize="32"
                   HorizontalAlignment="Center" VerticalAlignment="Top"/>
        
    </Grid>
</Window>
